@model IEnumerable<ZdflCount.Models.VS_MachineWorking>
@{
    ViewBag.Title = "设备工作时间统计表";
}

<h2>设备工作时间统计表</h2>


<div>
    开始日期：<input type="date" id="startDate" value="@ViewData["startDate"]"/>
    结束日期：<input type="date" id="endDate" value="@ViewData["endDate"]"/>

    <button class="date-btn-query"> 查询</button>
</div>
<table id="tableOrder"  border="1"  width="100%" > 
    <thead>    
        <th>@Html.DisplayNameFor(model => model.RoomNumber)</th>
        <th>@Html.DisplayNameFor(model => model.MachineName)</th>
        <th>@Html.DisplayNameFor(model => model.WorkingMinute)</th>
        <th>@Html.DisplayNameFor(model => model.WorkingCount)</th>

    </thead>   
    @foreach (var item in Model) 
    {
         <tr> 
              <td>@item.RoomNumber</td> 
              <td>@item.MachineName</td>  
              <td>@string.Format("{0}天{1}时{2}分", item.WorkingMinute/1440,item.WorkingMinute%1440/60,item.WorkingMinute%60)</td> 
              <td>@item.WorkingCount</td>  
         </tr>   
    }                     
</table>

<script src="/Scripts/jquery-1.7.1.js"></script>
<script src="/Scripts/dateReload.js"></script>