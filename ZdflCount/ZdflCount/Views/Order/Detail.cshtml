@model ZdflCount.Models.Orders

@{
    ViewBag.Title = "订单详细信息";
}

<h2>@ViewBag.Title</h2>

<fieldset>
    <legend>详细信息</legend>

    <div class="display-label">
            @Html.LabelFor(model => model.OrderNumber)
    </div>
