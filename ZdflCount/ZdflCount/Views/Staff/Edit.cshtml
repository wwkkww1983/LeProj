@model ZdflCount.Models.StaffInfo

@{
    ViewBag.Title = "修改员工资料";
}


<h2>@ViewBag.Title</h2>

@*<script src="~/Scripts/datepicker.js"></script>*@

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.Name)
        @Html.HiddenFor(model => model.Number)
    <fieldset>
        <legend>详细信息</legend>
    
       <div class="editor-label">
            @Html.LabelFor(model => model.Name)           
        </div>
        <div class="editor-field">
            ：@Html.DisplayFor(model => model.Name)
        </div>
        <div class="editor-label">
             @Html.LabelFor(model => model.Number)
        </div>
        <div class="editor-field">
            ：@Html.DisplayFor(model => model.Number)
        </div>
        <div class="editor-label">
             @Html.LabelFor(model => model.Position)
        </div>
        <div class="editor-field">
           ：@Html.DisplayFor(model => model.Position)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Sex)
        </div>        
        <div class="editor-field">        
            ：@Html.DisplayFor(model => model.Sex)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.DeptName)
        </div>
        <div class="editor-field">
           ： @Html.DisplayFor(model => model.DeptName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Phone)
        </div>
        <div class="editor-field">
          ：  @Html.EditorFor(model => model.Phone)
            @Html.ValidationMessageFor(model => model.Phone)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.telPhone)
        </div>
        <div class="editor-field">
         ：   @Html.EditorFor(model => model.telPhone)
        </div>        
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Address)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Address, new { rows = "2", style = "width:99%" })
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.HomeAddress)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.HomeAddress, new { rows = "2", style = "width:99%" })
        </div>        
        
        <div class="editor-label">
            @Html.LabelFor(model => model.BirthDate)
        </div>
        <div class="editor-field">
          ：  @Html.EditorFor(model => model.BirthDate)
             @Html.ValidationMessageFor(model => model.BirthDate)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.JoinInDate)
        </div>
        <div class="editor-field">
          ：  @Html.EditorFor(model => model.JoinInDate)
            @Html.ValidationMessageFor(model => model.JoinInDate)
        </div>        
        <div class="editor-label">
            @Html.LabelFor(model => model.EmergencyName)
        </div>
        <div class="editor-field">
           ： @Html.EditorFor(model => model.EmergencyName)
        </div>     
        <div class="editor-label">
            @Html.LabelFor(model => model.EmergencyPhone)
        </div>
        <div class="editor-field">
          ：  @Html.EditorFor(model => model.EmergencyPhone)
        </div>   
        <div class="editor-label">
            @Html.LabelFor(model => model.Remarks)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Remarks, new { rows = "5", style = "width:99%" })
        </div>     
        <p>
            <input type="submit" value="保存修改" />
        </p>
    </fieldset> 
}

<div class="left-outof-table">
    @Html.ActionLink("返回员工信息列表", "Index")
</div>

@section Scripts {
    @*@Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")*@
    @Scripts.Render("~/bundles/jqueryval")
}